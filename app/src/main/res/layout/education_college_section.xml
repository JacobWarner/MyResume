<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="jacob.warner.myresume.MainResumeActivity$PlaceholderFragment">

        <ImageView
            android:id="@+id/unl_icon"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:src="@drawable/unl_icon" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/activity_vertical_margin"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/college_name"
                android:textColor="@color/black_contrast_87"
                android:textSize="@dimen/regular_body_text" />

            <TextView
                android:id="@+id/college_bachelors"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bachelor_of_science"
                android:textColor="@color/black_contrast_87"
                android:textSize="@dimen/subheading_text"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/college_minor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/minor_study"
                android:textColor="@color/black_contrast_87"
                android:textSize="@dimen/regular_body_text" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/grade_point_average"
            android:textSize="@dimen/regular_body_text"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/college_graduation_gpa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:text="@string/anticipated_graduation"
            android:textSize="@dimen/regular_body_text"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/honors_full_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/bullet_point_divider_spacing"
        android:text="@string/honors_full_title"
        android:textColor="@color/black_contrast_87"
        android:textSize="@dimen/subheading_text"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/raikes_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/raikes_school_description"
        android:textSize="@dimen/regular_body_text" />

    <include layout="@layout/education_honors_section" />

    <include layout="@layout/education_activities_section" />

</LinearLayout>